<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>


<table class="table table-dark table-striped">
  <thead>
    <th>Id</th>
    <th>Title</th>
    <th>Content</th>
    <th>Show</th>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
  <tr>
    <td> <%= post.id %> </td>
    <td> <%= post.title %> </td>
    <td> <%= post.content %> </td>
    <td>
      <%= link_to "Show", post, class:"btn btn-dark"%>
    </td>

  <% end %>  
  </tr>
  </tbody>
</table>

<%= link_to "New post", new_post_path, class:"btn btn-dark"%>
